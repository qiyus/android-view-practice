<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/list_margin"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/locationButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="layout location" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textOff="off"
            android:textOn="on" />

        <Button
            android:id="@+id/buttonDialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="dialog" />

        <Button
            android:id="@+id/buttonPopupWindow"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="popupwindow" />

        <Button
            android:id="@+id/buttonPopupMenu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="popupmenu" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="exit" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_green_light"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="getLocalVisibleRect:" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="getGlobalVisibleRect:" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="getLocationOnScreen:" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lgetLocationInWindow:" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_green_light"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:src="@android:drawable/star_big_on" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1" />
    </LinearLayout>
</LinearLayout>